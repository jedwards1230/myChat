{
	"extends": "@mychat/tsconfig/internal-package.json",
	"compilerOptions": {
		"outDir": "dist",
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["../ui/src/*"],
			/* https://github.com/vercel/turbo/discussions/620 */
			"@mychat/api/*": ["../api/src/*"],
			"@mychat/db/*": ["../db/src/*"],
			"@mychat/shared/*": ["../shared/src/*"],
			"@mychat/ui/*": ["../ui/src/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
