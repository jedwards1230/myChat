{
	"name": "@mychat/db",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./client": {
			"types": "./dist/db/index.d.ts",
			"default": "./src/db/index.ts"
		},
		"./handler": {
			"types": "./dist/handler.d.ts",
			"default": "./src/handler/index.ts"
		},
		"./schema": {
			"types": "./dist/index.d.ts",
			"default": "./src/db/schema/index.ts"
		}
	},
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"clean": "rm -rf .turbo node_modules",
		"format": "prettier --check . --ignore-path ../../.gitignore",
		"lint": "eslint",
		"generate": "drizzle-kit generate",
		"migrate": "drizzle-kit migrate",
		"push": "drizzle-kit push",
		"studio": "drizzle-kit studio",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false",
		"with-env": "dotenvx run -f ../../.env --"
	},
	"dependencies": {
		"@mychat/logger": "workspace:*",
		"@vercel/postgres": "^0.8.0",
		"drizzle-orm": "^0.30.10",
		"drizzle-zod": "^0.5.1",
		"gpt4-tokenizer": "^1.3.0",
		"pgvector": "^0.1.8",
		"postgres": "^3.4.4",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@dotenvx/dotenvx": "^0.43.0",
		"@mychat/eslint-config": "workspace:*",
		"@mychat/prettier-config": "workspace:*",
		"@mychat/tsconfig": "workspace:*",
		"drizzle-kit": "^0.21.2",
		"eslint": "^9.3.0",
		"prettier": "^3.2.5",
		"typescript": "beta"
	},
	"prettier": "@mychat/prettier-config"
}
