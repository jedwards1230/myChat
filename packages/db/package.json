{
	"name": "@mychat/db",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"exports": {
		".": "./src/index.ts",
		"./*": "./src/*",
		"./client": "./src/client.ts",
		"./handler": "./src/handler/index.ts",
		"./schema": "./src/schema/index.ts"
	},
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"clean": "rm -rf .turbo node_modules dist",
		"format": "prettier --check . --ignore-path ../../.gitignore",
		"lint": "eslint",
		"generate": "drizzle-kit generate",
		"migrate": "drizzle-kit migrate",
		"npm-check": "npm-check",
		"push": "drizzle-kit push",
		"studio": "drizzle-kit studio",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false",
		"with-env": "dotenvx run -f ../../.env --"
	},
	"dependencies": {
		"@langchain/openai": "^0.0.33",
		"@mychat/logger": "workspace:*",
		"drizzle-orm": "^0.30.10",
		"drizzle-zod": "^0.5.1",
		"gpt4-tokenizer": "^1.3.0",
		"langchain": "^0.2.2",
		"openai": "^4.47.1",
		"pgvector": "^0.1.8",
		"playwright": "^1.44.1",
		"postgres": "^3.4.4",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@dotenvx/dotenvx": "^0.44.0",
		"@mychat/eslint-config": "workspace:*",
		"@mychat/prettier-config": "workspace:*",
		"@mychat/tsconfig": "workspace:*",
		"drizzle-kit": "^0.21.4",
		"eslint": "^9.3.0",
		"npm-check": "^6.0.1",
		"prettier": "^3.2.5",
		"typescript": "beta"
	},
	"prettier": "@mychat/prettier-config"
}
