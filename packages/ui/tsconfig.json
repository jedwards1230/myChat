{
	"extends": "@mychat/tsconfig/internal-package.json",
	"compilerOptions": {
		"outDir": "dist",
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
		"baseUrl": ".",
		"paths": {
			"@mychat/api/*": ["../api/src/*"],
			"@mychat/db/*": ["../db/src/*"],
			"@mychat/shared/*": ["../shared/src/*"]
		}
	},
	"include": ["src", "generate", "nativewind-env.d.ts"],
	"exclude": ["node_modules", "dist"]
}
