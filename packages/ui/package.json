{
	"name": "@mychat/ui",
	"private": true,
	"version": "0.1.0",
	"main": "./src/index.ts",
	"react-native": "./src/index.ts",
	"type": "module",
	"exports": {
		".": "./src/index.ts",
		"./*": "./src/*"
	},
	"license": "MIT",
	"scripts": {
		"add": "bunx @react-native-reusables/cli@latest add",
		"build": "tsc",
		"gen": "svgr --config-file=svgr.config.cjs --no-prettier --out-dir src/svg -- generate/svg",
		"generate": "bun run ./generate/index.ts",
		"clean": "rm -rf .turbo node_modules dist",
		"clean:svg": "find generate/svg -name \"*.svg\" -exec sed -i '' 's/xmlns=\"http:\\/\\/www.w3.org\\/2000\\/svg\"//g' {} \\;",
		"clean:generated": "rm -rf src/svg",
		"dev": "tsc --watch",
		"format": "prettier --check . --ignore-path ../../.gitignore",
		"lint": "eslint",
		"npm-check": "npm-check",
		"tsc": "tsc --noEmit --emitDeclarationOnly false",
		"ui-add": "bunx @react-native-reusables/cli@latest add && prettier src --write --list-different"
	},
	"dependencies": {
		"@mychat/api": "workspace:*",
		"@mychat/db": "workspace:*",
		"@mychat/shared": "workspace:*",
		"@radix-ui/react-alert-dialog": "^1.0.5",
		"@radix-ui/react-checkbox": "^1.0.4",
		"@radix-ui/react-dialog": "^1.0.5",
		"@radix-ui/react-dropdown-menu": "^2.0.6",
		"@radix-ui/react-label": "^2.0.2",
		"@radix-ui/react-popover": "^1.0.7",
		"@radix-ui/react-select": "^2.0.0",
		"@radix-ui/react-switch": "^1.0.3",
		"@react-native-async-storage/async-storage": "1.23.1",
		"@react-navigation/native": "^6.1.17",
		"clsx": "^2.1.1",
		"class-variance-authority": "^0.7.0",
		"cmdk": "^1.0.0",
		"expo-document-picker": "~12.0.1",
		"expo-router": "3.5.14",
		"nativewind": "^4.0.36",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-native": "0.74.1",
		"react-native-toast-message": "^2.2.0",
		"react-native-reanimated": "3.11.0",
		"react-native-root-siblings": "^5.0.1",
		"react-native-safe-area-context": "4.10.3",
		"react-native-svg": "^15.3.0",
		"react-native-web": "~0.19.12",
		"react-syntax-highlighter": "^15.5.0",
		"solito": "^4.2.2",
		"tailwind-merge": "^2.3.0"
	},
	"devDependencies": {
		"@mychat/eslint-config": "workspace:*",
		"@mychat/prettier-config": "workspace:*",
		"@mychat/tailwind-config": "workspace:*",
		"@mychat/tsconfig": "workspace:*",
		"@svgr/cli": "^8.1.0",
		"@types/react-syntax-highlighter": "^15.5.13",
		"eslint": "^9.3.0",
		"npm-check": "^6.0.1",
		"prettier": "^3.2.5",
		"tailwindcss": "^3.4.3",
		"typescript": "beta"
	},
	"prettier": "@mychat/prettier-config"
}
