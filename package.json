{
	"name": "@mychat/monorepo",
	"version": "1.0.0",
	"description": "",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*",
		"tooling/*"
	],
	"keywords": [],
	"author": "",
	"license": "MIT",
	"packageManager": "bun@1.1.9",
	"prettier": "@mychat/prettier-config",
	"scripts": {
		"build": "dotenvx run -- turbo build --continue --cache-dir=.turbo",
		"build:web": "dotenvx run -- turbo build --continue --cache-dir=.turbo --filter=web...",
		"build:native": "dotenvx run -- turbo build --continue --cache-dir=.turbo --filter=native...",
		"check": "turbo npm-check --continue --",
		"clean": "git clean -xdf node_modules",
		"clean:ws": "turbo clean --continue --parallel",
		"clean:turbo": "turbo clean --parallel",
		"compose": "docker compose -f compose.yml",
		"compose:test": "docker compose -f compose.yml -f compose.test.yml",
		"compose:prod": "docker compose -f production.yml",
		"dev": "TURBO_EXPERIMENTAL_UI=true dotenvx run -- turbo dev --parallel",
		"dev:web": "TURBO_EXPERIMENTAL_UI=true dotenvx run -- turbo dev --parallel --filter=web...",
		"dev:native": "TURBO_EXPERIMENTAL_UI=true dotenvx run -- turbo dev --parallel --filter=native...",
		"export": "turbo export",
		"export:docker": "dotenvx run -- sh -c 'docker build --build-arg=\"TURBO_TOKEN=$TURBO_TOKEN\" --build-arg=\"TURBO_TEAM=$TURBO_TEAM\" -f docker/Dockerfile -t mychat:local .'",
		"format": "turbo format --parallel -- --cache --cache-location node_modules/.cache/.prettiercache",
		"format:fix": "turbo format --parallel -- --write --cache --cache-location node_modules/.cache/.prettiercache",
		"lint": "turbo lint --parallel -- --cache --cache-location node_modules/.cache/.eslintcache",
		"lint:fix": "turbo lint --parallel -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
		"lint:ws": "bunx sherif@latest && bun run check",
		"migrate": "turbo migrate",
		"npm-check": "npm-check",
		"postinstall": "patch-package && bun run lint:ws",
		"start": "turbo start",
		"start:prod": "turbo start:prod",
		"tree": "tree -L 4 . --gitignore --dirsfirst --noreport --charset utf-8",
		"tsc": "turbo tsc",
		"update": "ncu -ws -i --root --format group,repo -p bun --cache --cacheFile=./node_modules/.cache/.ncu.json && bun run lint:ws"
	},
	"resolutions": {
		"markdown-it": "14.0.0"
	},
	"devDependencies": {
		"@dotenvx/dotenvx": "^0.44.0",
		"@mychat/prettier-config": "workspace:^",
		"@mychat/tsconfig": "workspace:*",
		"@turbo/gen": "^1.13.3",
		"npm-check": "^6.0.1",
		"npm-check-updates": "^16.14.20",
		"patch-package": "^8.0.0",
		"turbo": "^1.13.3"
	}
}
