{
	"name": "@mychat/server",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"clean": "rm -rf .turbo logs node_modules",
		"xdev": "bun --watch run src/index.ts",
		"dev:clean": "DEBUG_RESET_DB=true bun --watch run src/index.ts",
		"format": "prettier --check . --ignore-path ../../.gitignore",
		"lint": "eslint",
		"xnpm-check": "npm-check",
		"start": "bun run src/index.ts",
		"start:prod": "bun run src/index.ts",
		"test": "export TEST_ENV=true jest",
		"xtypecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@fastify/cors": "^9.0.1",
		"@fastify/multipart": "^8.2.0",
		"@fastify/rate-limit": "^9.1.0",
		"@fastify/static": "^7.0.4",
		"@fastify/swagger": "^8.14.0",
		"@fastify/swagger-ui": "^3.0.0",
		"@mychat/db": "workspace:*",
		"@mychat/logger": "workspace:*",
		"@mychat/shared": "workspace:*",
		"@readme/openapi-parser": "^2.5.1",
		"@trpc/server": "11.0.0-rc.377",
		"drizzle-orm": "^0.30.10",
		"fastify": "^4.27.0",
		"fastify-plugin": "^4.5.1",
		"fastify-type-provider-zod": "^1.2.0",
		"openai": "^4.47.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@babel/core": "^7.24.6",
		"@babel/preset-typescript": "^7.24.6",
		"@mychat/eslint-config": "workspace:*",
		"@mychat/prettier-config": "workspace:*",
		"@mychat/tsconfig": "workspace:*",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.12.12",
		"eslint": "^9.3.0",
		"jest": "^29.7.0",
		"npm-check": "^6.0.1",
		"openapi-types": "^12.1.3",
		"prettier": "^3.2.5",
		"ts-jest": "^29.1.3",
		"typescript": "beta"
	},
	"prettier": "@mychat/prettier-config"
}
