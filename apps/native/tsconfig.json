{
	"extends": ["expo/tsconfig.base", "@mychat/tsconfig/base.json"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["../../packages/ui/src/*"],
			"@mychat/ui/*": ["../../packages/ui/src/*"],
			/* https://github.com/vercel/turbo/discussions/620 */
			"@mychat/shared/*": ["../../packages/shared/src/*"]
		},
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	]
}
