{
	"extends": ["expo/tsconfig.base", "@mychat/tsconfig/base.json"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"tsBuildInfoFile": "../../node_modules/.cache/tsbuildinfo.json"
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	]
}
