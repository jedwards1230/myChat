{
	"extends": ["@mychat/tsconfig/base.json"],
	"compilerOptions": {
		"jsxImportSource": "nativewind",
		"plugins": [{ "name": "next" }],
		"paths": {
			"@/*": ["./src/*"],
			"@mychat/api/*": ["../../packages/api/src/*"],
			"@mychat/db/*": ["../../packages/db/src/*"],
			"@mychat/shared/*": ["../../packages/shared/src/*"],
			"@mychat/ui/*": ["../../packages/ui/src/*"],
			"@mychat/views/*": ["../../packages/views/src/*"]
		},
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
		"jsx": "preserve"
	},
	"include": [
		"next-env.d.ts",
		"app-env.d.ts",
		"tailwind.config.ts",
		"src",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules", ".next"]
}
