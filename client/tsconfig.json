{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "bundler",
        "experimentalDecorators": true,
        "strict": true,
        "paths": {
            "@/*": ["./src/*"],
            "@db/*": ["../server/src/modules/*"]
        }
    },
    "include": [
        "eslint.config.cjs",
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "../server/src/modules/**/*.ts",
        "../server/src/types/**/*.ts"
    ]
}
