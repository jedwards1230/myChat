{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"module": "NodeNext",
		"strict": true,
		"moduleResolution": "NodeNext",
		"paths": {
			"@/*": ["./src/*"],
			"@db/*": ["../server/src/modules/*"],
			"@bet/*": ["../server/src/types/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"../server/src/modules/**/*.ts",
		"../server/src/types/*.d.ts"
	]
}
