{
	"$schema": "https://turborepo.org/schema.json",
	//"experimentalUI": true,
	"pipeline": {
		"tsc": {},
		"lint": {
			"outputs": []
		},
		"test": {
			"dependsOn": ["build"],
			"inputs": ["**/*.{ts,tsx,js,jsx}"]
		},
		"export": {
			"dependsOn": ["^export"],
			"outputs": [
				"packages/client/dist/**",
				"packages/client/node_modules/.cache/nativewind/**",
				"node_modules/.cache/metro/**"
			]
		},
		"build": {
			"dependsOn": ["^export", "^build"],
			"outputs": ["build/**"]
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"interactive": true,
			"persistent": true
		}
	}
}
