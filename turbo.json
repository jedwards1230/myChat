{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"lint": {
			"outputs": []
		},
		"tsc": {
			"dependsOn": ["^tsc", "^lint"],
			"inputs": ["**/*.{ts,tsx}"],
			"outputs": []
		},
		"build-packages": {
			"dependsOn": ["^tsc", "^build-packages"],
			"outputs": ["packages/**"]
		},
		"test": {
			"dependsOn": ["build-packages"],
			"inputs": ["**/*.{ts,tsx,js,jsx}"]
		},
		"export": {
			"dependsOn": ["build-packages", "^export"],
			"outputs": [
				"packages/client/dist/**",
				"packages/client/node_modules/.cache/nativewind/**",
				"node_modules/.cache/metro/**"
			]
		},
		"build": {
			"dependsOn": ["^export"],
			"outputs": ["build/**"]
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"interactive": true,
			"persistent": true
		}
	}
}
