{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"lint": {
			"outputs": []
		},
		"tsc": {
			"dependsOn": ["^tsc", "^lint"],
			"inputs": ["**/*.{ts,tsx}"],
			"outputs": []
		},
		"test": {
			"inputs": ["**/*.{ts,tsx,js,jsx}"]
		},
		"build": {
			"dependsOn": ["^tsc", "tsc", "^build"],
			"outputs": [
				"node_modules/.cache/metro/**"
			]
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"interactive": true,
			"persistent": true
		},
		"start": {
			"dependsOn": ["^build"]
		},
		"start:prod": {
			"dependsOn": ["^build"]
		}
	}
}
