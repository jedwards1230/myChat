{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"lint": {
			"outputs": []
		},
		"typecheck": {
			"dependsOn": ["^lint", "lint", "^typecheck"],
			"inputs": ["**/*.{ts,tsx}"],
			"outputs": []
		},
		"test": {
			"inputs": ["**/*.{ts,tsx,js,jsx}"]
		},
		"migration:run": {
			"dependsOn": ["typecheck"],
			"outputs": []
		},
		"build": {
			"dependsOn": ["^typecheck", "typecheck", "^build"],
			"outputs": ["node_modules/.cache/metro/**"]
		},
		"dev": {
			"dependsOn": ["^build", "migration:run"],
			"cache": false,
			"interactive": true,
			"persistent": true
		},
		"start": {
			"dependsOn": ["^build", "migration:run"]
		},
		"start:prod": {
			"dependsOn": ["^build", "migration:run"]
		},
		"clean": {
			"cache": false
		},
		"//#clean": {
			"cache": false
		}
	}
}
