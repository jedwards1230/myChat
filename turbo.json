{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"test": {
			"inputs": ["**/*.{ts,tsx,js,jsx}"]
		},
		"migrate": {
			"dependsOn": ["typecheck"],
			"outputs": []
		},
		"build": {
			"dependsOn": ["typecheck", "^build"],
			"outputs": ["node_modules/.cache/metro/**"]
		},
		"dev": {
			"dependsOn": ["^build", "migrate"],
			"cache": false,
			"interactive": true,
			"persistent": true
		},
		"format": {
			"outputs": ["node_modules/.cache/.prettiercache"],
			"outputMode": "new-only"
		},

		"lint": {
			"dependsOn": ["^build"],
			"outputs": ["node_modules/.cache/.eslintcache"]
		},

		"typecheck": {
			"dependsOn": ["^build", "^lint", "lint", "^typecheck"],
			"outputs": ["node_modules/.cache/tsbuildinfo.json"]
		},
		"start": {
			"dependsOn": ["^build", "migrate"]
		},
		"start:prod": {
			"dependsOn": ["^build", "migrate"]
		},
		"clean": {
			"cache": false
		},
		"//#clean": {
			"cache": false
		}
	}
}
