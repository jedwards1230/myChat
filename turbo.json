{
	"$schema": "https://turborepo.org/schema.json",
	"globalDotEnv": [".env"],
	"pipeline": {
		"topo": {
			"dependsOn": ["^topo"]
		},
		"build": {
			"dependsOn": ["topo", "typecheck"],
			"outputs": ["node_modules/.cache/metro/**", "dist"]
		},
		"clean": {
			"cache": false
		},
		"//#clean:mono": {
			"cache": false
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"interactive": true,
			"persistent": true
		},
		"format": {
			"outputs": ["node_modules/.cache/.prettiercache"],
			"outputMode": "new-only"
		},

		"lint": {
			"dependsOn": ["topo", "^build"],
			"outputs": ["node_modules/.cache/.eslintcache"]
		},
		"migrate": {
			"dependsOn": ["typecheck"],
			"outputs": []
		},
		"start": {
			"dependsOn": ["^build"]
		},
		"start:prod": {
			"dependsOn": ["^build"]
		},
		"test": {
			"inputs": ["**/*.{ts,tsx,js,jsx}"]
		},
		"typecheck": {
			"dependsOn": ["topo", "^build", "lint"],
			"outputs": ["node_modules/.cache/tsbuildinfo.json"]
		}
	}
}
