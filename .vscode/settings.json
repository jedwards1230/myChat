{
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},

	"eslint.rules.customizations": [{ "rule": "*", "severity": "warn" }],
	"eslint.useFlatConfig": true,
	"eslint.workingDirectories": [
		{ "pattern": "apps/*/" },
		{ "pattern": "packages/*/" },
		{ "pattern": "tooling/*/" }
	],

	"tailwindCSS.classAttributes": ["class", "className", "headerClassName"],
	"tailwindCSS.lint.cssConflict": "ignore",
	"tailwindCSS.experimental.configFile": "./tooling/tailwind/web.ts",
	"tailwindCSS.experimental.classRegex": [
		["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
		["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
	],

	"turbo.useLocalTurbo": true,

	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.preferences.autoImportFileExcludePatterns": [
		"next/router.d.ts",
		"next/dist/client/router.d.ts"
	],

	"yaml.schemas": {
		"https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": "file:///Users/justin/Projects/myChat/docker/compose.test.yml"
	}
}
